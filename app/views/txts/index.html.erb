<h1>Listing txts</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Image url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @txts.each do |txt| %>
  <tr>
    <td><%= txt.text %></td>
    <td><%= txt.image_url %></td>
    <td><%= link_to 'Show', txt %></td>
    <td><%= link_to 'Edit', edit_txt_path(txt) %></td>
    <td><%= link_to 'Destroy', txt, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

